<Window x:Class="GoodsForPets.Views.Windows.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoodsForPets.Views.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Добавить категорию"
        Height="220" Width="230"
        MinHeight="220" MinWidth="230">
    <Grid>
        <StackPanel>
            <Label
                Content="Название категории"
                HorizontalAlignment="Left"/>
            
            <TextBox
                Name="NameTextBox"
                Margin="5,5"/>

            <Label
                Content="Единица измерения"
                HorizontalAlignment="Left"/>

            <TextBox
                Name="UnitTextBox"
                Margin="5,5"/>

            <Button
                Name="AddNewCategoryButton"
                Content="Добавить"
                Margin="5,5"
                Width="100"
                Height="30"
                Click="AddNewCategoryButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
