<Window x:Class="GoodsForPets.Views.Windows.AddSupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoodsForPets.Views.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Добавить поставщика"
        Height="120" Width="230"
        MinHeight="120" MinWidth="230">
    <Grid>
        <StackPanel>
            <Label
                Content="Наименование поставщика"
                HorizontalAlignment="Left"/>
            
            <TextBox
                Name="NameTextBox"
                Margin="5,5"/>

            <Button
                Name="AddNewSupplierButton"
                Content="Добавить"
                Margin="5,5"
                Width="100"
                Height="30"
                Click="AddNewSupplierButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
